<%= form_for(@clip, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @clip.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@clip.errors.count, "error") %> prohibited this clip from being saved:</h4>

      <ul>
      <% @clip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quote, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :quote, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :commentary, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :commentary, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :link, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :link, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :link_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :link_date, class: "form-control" %>
