  </div>
  <div class="form-group">
    <%= f.label :source_url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :source_url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fetch_response, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :fetch_response, class: "form-control" %>
